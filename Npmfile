#!/bin/sh

# Vim necessities
sudo npm install -g babel-eslint
sudo npm install -g csslint
sudo npm install -g eslint@3.9.1
sudo npm install -g eslint-plugin-import@2.1.0
sudo npm install -g eslint-plugin-jsx-a11y@2.2.3
sudo npm install -g eslint-plugin-react@6.6.0
sudo npm install -g eslint-config-airbnb@13.0.0
sudo npm install -g js-beautify
sudo npm install -g jshint
sudo npm install -g jsonlint
sudo npm install -g n
sudo npm install -g node-inspector
sudo npm install -g npm-check

# List
npm list -g --depth=0
