/* See http://www.jshint.com/options/ for more details on configuration */
{

	// Enforcing
	"curly": true,
	"eqeqeq": true,
	"freeze": true,
	"latedef": "nofunc",
	"maxcomplexity": 12,
	"maxdepth": 8,
	"maxparams": 4,
	"maxstatements": 48,
	"noarg": true,
	"nonbsp": true,
	"singleGroups": true,
	"undef": true,
	"unused": true,

	// Relaxing
	"supernew": true,

	// Environments
	"node": true,
	"jquery": true,
	"browser": true,
	"mocha": true,
	"jasmine": true
}
